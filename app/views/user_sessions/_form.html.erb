<%= form_tag user_sessions_path, :method => :post, id: "login_form" do %>
  <div class="row">
    <div class="col-sm-offset-4 col-sm-2">
      <%= label_tag :employee_id, "社員番号" %>
    </div>
    <div class="col-sm-6">
      <%= text_field_tag :employee_id, '', autofocus: true %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-offset-4 col-sm-2">
      <%= label_tag :password, "パスワード"%>
    </div>
    <div class=" col-sm-6">
      <%= password_field_tag :password, '', autocomplete: "off" %>
    </div>
  </div>
  <div class="row">
    <p id="notice" class="text-center"><%= flash[:notice] %></p>
    <div class="col-sm-offset-5 col-sm-2">
      <div class="actions">
        <%= submit_tag "ログイン", class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>
