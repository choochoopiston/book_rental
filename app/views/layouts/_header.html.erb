<div class="container-fluid">
  <div id="header">
      <div>
        <h1 id="logo"><%= link_to image_tag("dummy_logo.png", width: "80" ), root_path %> <%= link_to "書籍管理システム", root_path %></h1>
      </div>
      <div id="nav">
      <% if current_user %>
        <div class="row">
          <div class="col-sm-6">
            ログイン中: <%= link_to "'#{current_user.username}'さん", user_path(current_user.id) %>
          </div>
          <div class="col-sm-6 text-right">
            <%= link_to "ログアウト", :logout, method: :post %>
          </div>
        </div>
      <% else %>
        <!--<%= link_to "Register", new_user_path %> |-->
        <div class="text-right">
          <%= link_to "ログイン画面", :login %>
        </div>
      <% end %>
      </div>
  </div>
  <div>
      <p id="notice"><%= flash[:notice] %></p>
      <p id="alert"><%= flash[:alert] %></p>
  </div>
</div>